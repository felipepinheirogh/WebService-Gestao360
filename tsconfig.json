{
  "compilerOptions": {
    "target": "ES2019",                  
    "module": "commonjs",                
    "strict": true,                      
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                  
    "rootDir": "./src",                  
    "resolveJsonModule": true,           
    "moduleResolution": "node",          
    "sourceMap": true                    
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
